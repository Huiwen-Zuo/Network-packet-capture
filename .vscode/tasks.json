{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc.exe build active file",
			"command": "C:/msys64/ucrt64/bin/gcc.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",                        // Enables debugging information
				"${file}",                   // The source file to compile
				"-lwpcap",                   // Link with the wpcap library (Npcap)
				"-lws2_32",                  // Link with Winsock library (WS2_32)
				"-IC:/NpcapSDK/Include",     // Path to pcap.h
				"-LC:/NpcapSDK/Lib/x64",     // Path to 64-bit wpcap.lib
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}.exe"  // Output executable name
			],
			"options": {
				"cwd": "${workspaceFolder}"  // Working directory (can be the workspace root)
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Generated task to build the active file"
		}
	]
}
